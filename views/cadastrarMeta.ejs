<%- include('partes/headUser')%>  
    <%- include('partes/menuUser')%>  
    <div class="container">
        <header>
            <h1 class="title">Cadastrar Nova Meta</h1>
        </header>
       <section>
           <form action="/meta" method="post" class="registerAndEditMeta">
                <div>
                    <input type="text" name="titulo" placeholder="Titulo da meta *" required>
                </div>
                <div>
                    <textarea id="description" name="description" placeholder="Descrição"></textarea>
                </div>
                <div class="total_prazo">
                    <div>
                        <label for="total">Total de livros * </label>
                        <input type="number" min="1" name="total_books" placeholder="Total de Livros" required>
                    </div>
                    <div>
                        <label for="prazo">Prazo * </label>
                        <input type="date" name="prazo" placeholder="DD/MM/YYYY" required>
                    </div>
                </div>
                <div>
                    <p>* Campos obrigatórios</p>
                </div>
                <div class="btn-group">
                    <p><input class="btn" type="submit" value="Cadastrar"></p>
                    <p><a class="btn" href="/">Voltar</a></p>
                </div>
           </form>
       </section>
    </div>
<%- include('partes/footer')%>  
